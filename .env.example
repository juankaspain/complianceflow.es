# Application Environment
NODE_ENV=development

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://complianceflow.es
NEXT_PUBLIC_API_URL=https://api.complianceflow.es
NEXT_PUBLIC_APP_VERSION=2.0.0

# Analytics & Monitoring
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# SEO
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_verification_code_here
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# API Configuration (Server-side only)
API_SECRET_KEY=your_secret_key_here_min_32_chars
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/complianceflow
DATABASE_POOL_SIZE=10

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379
REDIS_TTL=300000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@complianceflow.es

# Authentication (Optional)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_min_32_chars

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Payment Processing (Optional)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_TWO_FACTOR_AUTH=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=false

# CI/CD (GitHub Secrets)
# NETLIFY_SITE_ID=your_netlify_site_id
# NETLIFY_AUTH_TOKEN=your_netlify_auth_token
# CODECOV_TOKEN=your_codecov_token
# LHCI_GITHUB_APP_TOKEN=your_lighthouse_token