# ============================================================================
# COMPLIANCEFLOW - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ============================================================================
# API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_URL=https://api.complianceflow.es
NEXT_PUBLIC_API_VERSION=v1

# ============================================================================
# ANALYTICS
# ============================================================================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================================================
# AUTHENTICATION (if implemented)
# ============================================================================
# NEXTAUTH_URL=https://complianceflow.es
# NEXTAUTH_SECRET=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# ============================================================================
# DATABASE (if implemented)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/complianceflow
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# ============================================================================
# EMAIL SERVICE (if implemented)
# ============================================================================
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# EMAIL_FROM=noreply@complianceflow.es

# ============================================================================
# PAYMENT GATEWAY (if implemented)
# ============================================================================
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ============================================================================
# ERROR TRACKING
# ============================================================================
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COOKIES=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# ============================================================================
# DEPLOYMENT
# ============================================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
