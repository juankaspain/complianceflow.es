# ComplianceFlow Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED - Application
# ============================================

# Application environment
NODE_ENV=production

# App version (updated automatically by CI/CD)
NEXT_PUBLIC_APP_VERSION=2.0.0

# Site URLs
NEXT_PUBLIC_SITE_URL=https://complianceflow.netlify.app
NEXT_PUBLIC_API_URL=https://complianceflow.netlify.app/api

# ============================================
# RECOMMENDED - Analytics & Monitoring
# ============================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Search Console Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_verification_code

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
SENTRY_ORG=your-org
SENTRY_PROJECT=complianceflow
SENTRY_AUTH_TOKEN=your_sentry_token

# ============================================
# OPTIONAL - Database
# ============================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/complianceflow
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ============================================
# OPTIONAL - Authentication
# ============================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ============================================
# OPTIONAL - Email
# ============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@complianceflow.es

# SendGrid (alternative)
SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================
# OPTIONAL - Storage
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=complianceflow-uploads

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# OPTIONAL - External APIs
# ============================================

# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx

# ============================================
# OPTIONAL - Feature Flags
# ============================================

ENABLE_MAINTENANCE_MODE=false
ENABLE_BETA_FEATURES=false
ENABLE_AI_ASSISTANT=true
ENABLE_ADVANCED_ANALYTICS=true

# ============================================
# OPTIONAL - Rate Limiting
# ============================================

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ============================================
# OPTIONAL - Security
# ============================================

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://complianceflow.es,https://app.complianceflow.es

# Content Security Policy
CSP_REPORT_URI=https://your-csp-report-endpoint.com

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Debug mode
DEBUG=false

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# MailHog (dev email testing)
MAILHOG_HOST=localhost
MAILHOG_PORT=1025