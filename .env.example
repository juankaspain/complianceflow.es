# ComplianceFlow Environment Variables
# Copy this file to .env.local and fill in your values

# PostHog Analytics (Product Analytics)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics 4 (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Newsletter API (Choose one)
# Mailchimp
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_list_id

# OR SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_LIST_ID=your_list_id

# Contact Form
CONTACT_FORM_EMAIL=contact@complianceflow.com

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# API Configuration
NEXT_PUBLIC_API_URL=https://api.complianceflow.com
API_SECRET_KEY=your_secret_key

# Vercel/Netlify Build
NEXT_PUBLIC_SITE_URL=https://complianceflow.netlify.app
