# =============================================================================
# ComplianceFlow Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=https://complianceflow.es
NEXT_PUBLIC_API_URL=https://api.complianceflow.es

# -----------------------------------------------------------------------------
# PostHog Analytics
# -----------------------------------------------------------------------------
# Get your keys from: https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# NextAuth v5 Configuration
# -----------------------------------------------------------------------------
# Generate a secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# OAuth Providers (optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# -----------------------------------------------------------------------------
# Database (optional - if using Prisma)
# -----------------------------------------------------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/complianceflow

# -----------------------------------------------------------------------------
# Upstash Redis (Rate Limiting)
# -----------------------------------------------------------------------------
# Get your credentials from: https://upstash.com
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# -----------------------------------------------------------------------------
# Email Service (optional)
# -----------------------------------------------------------------------------
# RESEND_API_KEY=your_resend_api_key
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASSWORD=your_smtp_password
# EMAIL_FROM=noreply@complianceflow.es

# -----------------------------------------------------------------------------
# API Keys for Compliance Services
# -----------------------------------------------------------------------------
# Spanish Tax Authority (AEAT)
# AEAT_API_KEY=your_aeat_api_key
# AEAT_NIF=your_company_nif
# AEAT_CERTIFICATE_PATH=/path/to/certificate.pfx
# AEAT_CERTIFICATE_PASSWORD=certificate_password

# Verifactu Service
# VERIFACTU_API_KEY=your_verifactu_key
# VERIFACTU_ENDPOINT=https://api.verifactu.es

# KYC/AML Service
# KYC_API_KEY=your_kyc_provider_key
# KYC_ENDPOINT=https://api.kycprovider.com

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
# NODE_ENV=development
# ANALYZE=false
# PLAYWRIGHT_BASE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# ENABLE_LOGGING=true
